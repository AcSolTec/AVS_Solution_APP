@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/LogIn/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div id="LoginInto">
                <div class="row justify-content-center">
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-7 col-lg-5">
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex align-items-center justify-content-center">
                                <img src="~/AVS_logo.png" width="180px;" height="90px;" />
                            </div>
                            <br />
                            <br />
                            <form action="#" class="login-form">
                                <div class="form-group">
                                    <div id="" class="card text-white bg-success mb-3">
                                        <div class="card-body">
                                            <p id="pMeesage" class="card-text">
                                                E-mail validate, please
                                                log in AVS page.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group d-md-flex">
                                    <button type="button" id="btnreLogin" class="form-control btn btn-primary rounded submit px-3">Clic for redirect page index</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>


        $("#btnreLogin").click(function () {
             window.location.href = '/avs/Account/Login';
        });


    </script>

    <script src="~/LogIn/js/jquery.min.js"></script>
    <script src="~/LogIn/js/popper.js"></script>
    <script src="~/LogIn/js/bootstrap.min.js"></script>
    <script src="~/LogIn/js/main.js"></script>
</body>
</html>

