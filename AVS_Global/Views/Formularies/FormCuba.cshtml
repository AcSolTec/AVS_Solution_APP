    <script>

        $('#dtEntry').datetimepicker({
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });


        $('#dtDeparture').datetimepicker({
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

        function onlyOne(checkbox) {
            var checkboxes = document.getElementsByName('check');
            checkboxes.forEach((item) => {
                if (item !== checkbox) item.checked = false
            });
        }

        function onlyOneShip(checkbox) {
            var checkboxes = document.getElementsByName('checkShip');
            checkboxes.forEach((item) => {
                if (item !== checkbox) item.checked = false
            });
        }

    </script>
    <script src="~/Forms/js/jsForms.js"></script>
</body>
</html>
