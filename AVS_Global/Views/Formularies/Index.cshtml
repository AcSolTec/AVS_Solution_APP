@using AVS_Global.Controllers
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@model AVS_Global.Models.CatModelsView

@inject IStringLocalizer<FormulariesController> Localizer
@inject IHtmlLocalizer<FormulariesController> HtmlLocalizer

@{
    Layout = "~/Views/Shared/_NavBarForms.cshtml";
}
@{
    ViewData["Title"] = "Formularies";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet">

    <link href="~/bootstrap.min.css" rel="stylesheet" />
    <link href="~/style.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
        <link rel="stylesheet" href="~/admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
        <link rel="stylesheet" href="~/admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">*@
</head>
<body>
    <div class="content">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- /.content-header -->
            <!-- Main content -->

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">You can choose another country to apply for the visa</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="form-row mt-4">
                        <div class="col-6 col-sm-6">
                            <select id="ddCountry" class="multisteps-form__select form-control" asp-for="countriesCust.IdCountry" asp-items="@(new SelectList(@ViewBag.items,"IdCountry", "Name"))">
                                <option value="0">Choose Country</option>
                            </select>
                        </div>
                        <div class="col-6 col-sm-6 mt-4 mt-sm-0">
                            <input id="btnAddCountry"  class="btn btn-success" type="submit" value="Add" title="Choose a pic"/>
                        </div>
                    </div>
                    <div class="form-row mt-4">
                        <div id="dvcardMessage" style="display:none" class="card text-white bg-danger mb-3">
                            <div class="card-body">
                                <p id="pMeesage" class="card-text">@ViewBag.MessageInNewForm</p>
                            </div>
                        </div>
                         <div id="dvCardSuccess" style="display:none" class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <p id="pMeesageSuc" class="card-text"></p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Choose form for continue capture</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tbForms" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id Form</th>
                                <th>Country</th>
                                <th>Mail</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.forms)
                            {
                                var nameForm = "Form" + item.country + "?idForm=" + item.idForm;
                                <tr>
                                    <td>
                                        @item.idForm
                                    </td>
                                    <td>
                                        @item.country
                                    </td>
                                    <td>
                                        @item.customer
                                    </td>
                                    <td>
                                        @item.status
                                    </td>
                                    <td><a class="btn btn-outline-dark" href="@Url.Content(nameForm)">Go to Form</a></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.content -->
        </div>
    </div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'></script>
    <script src="~/script.js"></script>
    <script src="~/Bootstrap/js/jquery-1.8.3.min.js"></script>
    <script src="~/Bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Forms/js/jsIndex.js"></script>
    <script>
        $('#culture option:contains("English (United States)")').attr("disabled", "disabled");
        $('#culture option:contains("Spanish (Mexico)")').attr("style", "display:none");
        $('#culture option:contains("French (France)")').attr("style", "display:none");
        $('#culture option:contains("German (Germany)")').attr("style", "display:none");
    </script>
</body>
</html>
<!-- /.content-wrapper -->
